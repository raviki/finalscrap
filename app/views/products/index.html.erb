						<%= simple_format(product.name,:class=>:name)%>
						<%= simple_format("Rs #{product.price}",:class =>:pricehilit)%>
						<%=form_for(:cart_item,url: cart_items_path, remote:true, :html => {id: "addcart"}) do |f|%>
						<div class="centerform">
