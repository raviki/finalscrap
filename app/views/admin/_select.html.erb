 <% if defined? show_products %>
 <% if @products.size > 10 %>
	<div class="longtable">
<% else %>
	<div>
<% end %>
 	<table>
		<%= render :partial => 'admin/merchandise/products/table_header', :locals => { :select_page => 'yes' }  %>
		<tbody>
   		   <%= render :partial => 'admin/merchandise/products/product', :locals => { :select_page => 'yes' }, :collection => @products %>
		</tbody>
	</table>
</div>

<% end %>

