				:html => {:class => 'prepend-6', :method => "get"} do |f| %>

<%= select_tag(:customer_group_id, options_from_collection_for_select(CustomerGroup.all, "id", "display_name"))%>
  
<%= submit_tag "Confirm Group Id",
                        :name => nil, :class => 'button small blue-button', :method =>  "update_customer_group_id" %> 
<% end %>


