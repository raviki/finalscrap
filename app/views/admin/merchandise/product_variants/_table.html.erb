<table>
  <thead>
    <tr>    
      <th>Value</th>
      <th>Location Serviced</th>
      <th>Price</th>
      <th>Home Service Prices</th>
      <% if @product.nature == ProductNature(:TASKwBRAND) %>
        	<th>Brand</th>
      <% end %>
       <th></th>
       <th></th>
    </tr>
  </thead>

  <tbody>
    <% @product_variants.each do |product_variant| %>
      <tr>
        <td><%= product_variant.value %></td>
        <td><%= product_variant.location %></td>
        <td><%= product_variant.price %></td>
        <td><%= product_variant.service_price %></td> 
        <% if @product.nature == ProductNature(:TASKwBRAND) %>
        	<td><%= product_variant.brand %></td>
        <% end %>
        
        <td><%= link_to 'Edit',  edit_product_variant_path(product_variant) %></td>      		
        <td><%= link_to 'Destroy', product_variant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>