<h4 style='text-align:center'>Store Information</h4>
<table>
	<%= render 'admin/partners/stores/table_header' %>
	<tbody>
      <%= render :partial => 'admin/partners/stores/store', :object => @store %>
	</tbody>
</table>

<% if @update_products %>

	<h5 style='text-align:left'>Update Products</h5>
	<%= form_for @store, :url  => admin_partners_store_path(@store), :url => { :action => "update_product_map" },
				:html => {:class => 'prepend-6', :method => "put"} do |f| %>
				
	<%= render :partial => 'admin/select', :locals => { :update_products4store => 'yes' }  %>	
	<%= submit_tag "Confirm Update",
                        :name => nil, :class => 'button small blue-button', :method =>  "update_product_map" %>
                        
	<% end %>
<% else %>
 
 <h5 style='text-align:right'>Listing Products</h5>
<table>
	<%= render :partial => 'admin/merchandise/products/table_header', :locals => { :store_page => 'yes' }  %>
	<tbody>
      <%= render :partial => 'admin/merchandise/products/product', :locals => { :store_page=> 'yes' }, :collection => @store.products.all %>
	</tbody>
</table>

	<%= link_to "Update Product List",  :class => 'button small blue-button', :url => admin_partners_stores_path, :id => @store.id, :update_products => "yes", :action => "show", :method => "get" %>
<% end %>


<%= link_to 'Search Page', admin_partners_stores_url, :class => 'button small blue-button' %>

