<div class="account-page">
<div class="span2">
	<div class="tabbable tabs-left">
		<ul class="nav nav-tabs">
			<li>
				<%= link_to "Adresses", "#address",{'data-toggle' => "tab" }%>
			</li>
			<li>
				<%= link_to "Change Email", "#email",{"data-toggle"=>"tab"}%>
			</li>
			<li>
				<%= link_to "Change Password", "#password",{"data-toggle"=>"tab"}%>
			</li>
		</ul>
	</div>
</div>
<div class="tab-content">
	<div class="tab-pane fade in active" id="address">

		<%= render :template => "/addresses/index"%>
	</div>

	<div class="tab-pane fade in" id="password">
		<table class="table table-hover">
			<tr>
				<td> Current Email </td>
				<td><%= @user.email%> </td>
			</tr>
			<tr>
				<td> Old Password </td>
				<td> <%=form_for(@user) do |f| %>
				<%= f.password_field :old_password%> </td>
			</tr>
			<tr>
				<td>	<%= f.label :password,"Password",:class => "control-label" %></td>
				<td>
					<%= f.password_field :password%>
				</td>
			</tr>
			<tr>
				<td> <%= f.label :password_confirmation,"Confirmation" ,:class => "control-label"%></td>
				<td> <%= f.password_field :password_confirmation %></td>
			</tr>
			<tr>
				<td></td>
				<td><%= f.submit("Change Password",:class =>"btn btn-link")%> </td>
				<%end%>
			</tr>
		</table>

	</div>
	<div class="tab-pane fade in" id="email">
		<table class="table table-hover">
			<tr>
				<td> Current Email </td>
				<td><%= @user.email%> </td>
			</tr>
			<tr>
				<td> New Email </td>
				<td> <%=form_for(@user) do |f| %>
				<%= f.text_field :email%> </td>
			</tr>
			<tr>
				<td>	<%= f.label :password,"Password",:class => "control-label" %></td>
				<td>
					<%= f.password_field :password%>
				</td>
			</tr>
			<tr>
				<td></td>
				<td><%= f.submit("Change Email",:class =>"btn btn-link")%> </td>
				<%end%>
			</tr>
		</table>

	</div>
</div>
</div>	
