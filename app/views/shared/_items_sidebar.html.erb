 	<ul class="nav nav-list bs-docs-sidenav">
 		<% @categories.each do |c| %>
 			<li class="dropdown-submenu">
 				<% @temp_category = c %>				
 				<%= link_to c.name, category_path(c), :class => "dropdown-toggle", :data => { :toggle => "dropdown" } %>
 				<% if @temp_category.activeProducts.size > 0 %>
					<ul class="dropdown-menu"> 
					
 					<% @pre_menu = "some_defualt" %>
 					
 					<% @temp_category.activeProducts.order("menu_parent  desc").each do |product| %>
 						<% if product.menu_parent != @pre_menu && @pre_menu != "some_defualt"%>
 							</ul>
 								</li>
 						<% end %>
 						
 						<% if product.menu_parent != @pre_menu && product.menu_parent %>
							<li class="dropdown-submenu"> <%= link_to(product.menu_parent) %> 
								<ul class="dropdown-menu"> 
 						<% end %>
 						<li><%= link_to product.name,  category_product_path(@temp_category,product) %></li>
 						 						
 						<% @pre_menu = product.menu_parent %>
 					<% end %>
 					<li><%= link_to("Tools & Spares", category_path(c, :tools => true)) %></li>	
 					<% if @pre_menu %>
 						</ul></li>
 					<% end %>
 					</ul>		
 				<% end %>		
 			</li> 							
 		<% end %> 		
	</ul> 

