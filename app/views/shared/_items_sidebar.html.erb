 	<ul class="nav nav-list bs-docs-sidenav">
 		<% @categories.each do |c| %>
 			<li class="dropdown-submenu">
 				<% @temp_category = c %>				
 				<%= link_to c.name, category_path(c), :class => "dropdown-toggle", :data => { :toggle => "dropdown" } %>
 				<% if @temp_category.activeProducts.size > 0 %>
 					<ul class="dropdown-menu"> 						
 						<% @temp_category.activeProducts.order("views  desc").each do |product| %>
 							<li><%= link_to product.name,  category_product_path(@temp_category,product) %></li>
 						<% end%> 
 						<li><%= link_to("Tools & Spares", category_path(c, :tools => true)) %></li>					
 					</ul>	
 				<% end %>		
 			</li> 							
 		<% end %> 		
	</ul> 

