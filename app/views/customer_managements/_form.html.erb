
<%= form_for(@customer_management, :html =>{:class => "form-horizontal"}) do |f| %>
<% if @customer_management.errors.any? %>
    <div class="alert alert-error offset2 span8">
      <h3 class="offset1">Please fix these <%= pluralize(@customer_management.errors.count, "error")%> to Sign Up</h3>

      <ul class="offset2">
      <% @customer_management.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  
<div class="row-fluid">
	<div class="offset3">
  <div class="control-group">
    <%= f.label :name,"Name",:class => "control-label" %>
    <div class="controls">
    <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password,"Password",:class => "control-label" %>
    <div class="controls">
    <%= f.password_field :password %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation,"Confirmation" ,:class => "control-label"%>
    <div class="controls">
    <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :email %>
    </div>
  </div>
  <div class="controls">
  <div class="actions">
    <%= f.submit "Create Account", class: "btn btn-info"%>
  </div>
  </div>
  </div>
  </div>
<% end %>

