<header>
	<script>
   $(document).ready(function() {
   $('.selectpicker').selectpicker();
});
</script>
       
	<br>
	<div class="container">
		<ul class="inline">
			<li class="pull-left">
				100% Customer Satisfaction
			</li>
			<li class="pull-right">
				On Time On Demand Service
			</li>
			<br>
		</ul>
	</div>
	<div class="navbar">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </a>
				<a class="brand" href="#">Title</a>
				<div class="nav-collapse collapse">
					<ul class="nav">
						<li>
							<%= form_tag products_path, :method => 'get', :id => "index", :class => 'navbar-search' do %>
								<div class="input-prepend input-append offset2">
									
									
									<%=	select(@caties,"id", Category.all.collect {|p| [ p.name, p.id ] }, { prompt:"All" },{class:"selectpicker span2", id: "cat",name:"select"})%>
									
									<%= text_field_tag :key, params[:key], :class => " span4 search-query" %>
									<%= submit_tag "Search", :name => nil, :class => "btn" %>
    								
								</div>
							<% end %>
						</li>
						</ul>
						<ul class="nav pull-right">
							<li>
								<a href="#">Link</a>
							</li>
							<li class="divider-vertical"></li>
							<% if signed_in? || current_user %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
				Hello <%= @user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Account", '#' %></li>
                <li><%= link_to "Orders", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", log_out_path%>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", sessions_path %></li>
          <% end %>	
          					</ul>
				</div><!-- /.nav-collapse -->
			</div>
		</div><!-- /navbar-inner -->
	</div><!-- /navbar -->
	</div>
</header>
